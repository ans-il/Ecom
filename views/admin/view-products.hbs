<section>
    <div class="container mt-5">
        <div class="d-flex mb-3">
            <a href="/admin/add-product" class="btn btn-success ms-auto">Add product</a>
        </div>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col" class="text-center">Sr. No</th>
                    <th scope="col" class="text-center">Name</th>
                    <th scope="col" class="text-center">Description</th>
                    <th scope="col" class="text-center">Price</th>
                    <th scope="col" class="text-end">Image</th>
                </tr>
            </thead>
            <tbody>
                {{#each products}}
                <tr>
                    <th scope="row" class="text-center align-middle">{{inc @index}}.</th>
                    <td class="text-center align-middle">{{this.name}}</td>
                    <td class="text-center align-middle">{{this.description}}</td>
                    <td class="text-center align-middle">Rs.{{this.price}}</td>
                    <td class="text-end"><img src="/product-images/{{this._id}}.jpg" style="width:50px; height:50px;" />
                    </td>
                    <td class="text-end">
                        <a class="btn btn-primary" href="/admin/edit-product/{{this._id}}">Edit</a>
                        
                        <a class="btn btn-danger" href="/admin/delete-product/{{this._id}}"
                        onclick="return confirm('Are you sure you want to delete {{this.name}}?')">Delete</a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</section>