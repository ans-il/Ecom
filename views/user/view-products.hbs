<section class="container mt-5">
    <div class="row">
        {{#each products}}
        <div class="col-md-3 p-4 d-flex justify-content-center">
            <div class="card" style="height:25rem; width: 15rem;">  
                <img src="/product-images/{{this._id}}.jpg" class="card-img-top" alt="..." style="height: 15rem;">
                <div class="card-body">
                    <h5 class="card-title">{{this.name}}</h5>
                    <p class="card-text">Rs.{{this.price}}</p>   
                    <p class="card-text">{{this.description}}</p>                    
                    <button class="btn btn-success" onclick="addToCart('{{this._id}}')">Add to cart</button>
                </div>
            </div>
        </div>
        {{/each}}
    </div>    
</section>

