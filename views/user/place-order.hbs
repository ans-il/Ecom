<section>
    <div class="container p-5">
        <div class="row">
        <div class="col-md-6">
            <h2 class="mb-5">Enter Delivery Details</h2>                   
                <form action="/place-order" method="post" id="checkout-form">
                    
                    <label for="">Address</label>
                    <input type="text" name="address" class="form-control"/>
                    
                    <label for="">Pincode</label>
                    <input type="text" name="pincode" class="form-control"/>
                    
                    <label for="">Mobile</label>
                    <input type="text" name="mobile" class="form-control"/>
                    <input type="text" name="userId" value="{{user._id}}" hidden />                
        </div>
        <div class="ms-5 col-md-5">
            <div class="container p-5 mt-5 border border-2 border-secondary">
            <h3 class="mb-4">Total Amount: Rs.{{total}}</h3>             
                    
                    <label for="">Payment Method</label><br>
                    <input checked type="radio" name="paymethod" value="cod" /> COD <br>
                    <input type="radio" name="paymethod" value="online"/> Online Payment                                
                                                       
                    <button type="submit"class="btn btn-success float-end">Checkout</button>
                </form>  
            </div>
        </div>
        </div>
    </div>
</section>